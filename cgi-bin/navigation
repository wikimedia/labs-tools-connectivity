    else
      echo "<li><a id=\"seealsolang\" href=\"./go.sh?$stdurl&listby=suggest,foreign&suggest=translate&foreign=$foreign\">$foreignname</a></li>"
    fi
#
#   *** <category name>
#
    if [ "$category" != '' ]
    then
