  then
    echo "<b>5) <font color=red>$articlestotranslate</font></b>"
  else
    echo "<b>5) <a href=\"./go.sh?$stdurl&listby=suggest,foreign&suggest=translate\">$articlestotranslate</a></b>"
  fi
#
#   ** <foreign language name>
#
  if [ "$foreign" != '' ]
